<Window x:Class="MVP_Notepad.View.CloseMainWindowDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vms="clr-namespace:MVP_Notepad.ViewModel"
        xmlns:utils="clr-namespace:MVP_Notepad.Utils"
        mc:Ignorable="d"
        Title="Close File" Height="116" Width="268"
        utils:DialogCloser.DialogResult="{Binding DialogResult}"
        ResizeMode="NoResize">
    <Window.DataContext>
        <vms:CloseFileViewModel x:Name="CloseFileViewModelContext"/>
    </Window.DataContext>
    <Grid Margin="0,0,-1,1">
        <Label x:Name="label" Content="One of the tabs is not saved.&#xD;&#xA; Save and close?" HorizontalAlignment="Left" Width="225" Height="40" VerticalAlignment="Bottom" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="20,0,0,36"/>
        <Button x:Name="button" Content="Save" Command="{Binding SaveCommand}" Margin="35,0,153,10" VerticalAlignment="Bottom" />
        <Button x:Name="button1" Content="Do not Save" Margin="0,0,35,10" Command="{Binding CloseWithoutSavingCommand}" VerticalAlignment="Bottom" RenderTransformOrigin="0.667,0.45" HorizontalAlignment="Right" Width="83"/>
    </Grid>
</Window>
